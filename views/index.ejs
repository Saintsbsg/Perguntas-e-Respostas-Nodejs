<%- include('./partials/header.ejs')%>
<body>
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <hr>
       <a class="btn btn-success mb-3" href="/ask">Perguntar</a>
       <% questions.forEach(question =>{%>
        <div class="card">
            <div class="card-header">
                <p>Perguntado por: <%= question.user.name%></p>
            </div>
            <div class="card-body">
                <p><%= question.body %></p>
            </div>
            <div class="card-footer">
                <a class="btn btn-success" href="/answer/<%=question.id%>">Responder</a>
                <a class="btn btn-success" href="/question/<%=question.id%>">Ver respostas</a>
            </div>
        </div>
        <br>
        <%})%>
    </div>
</body>
<%- include('./partials/footer.ejs')%>
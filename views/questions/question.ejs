<%- include('../partials/header.ejs')%>
<body>
    <%- include('../partials/userNavbar.ejs')%>
    <div class="container mt-2"  >
        <div class="card">
            <div class="card-header">
                <h3>Pergunta</h3>
            </div>
            <div class="card-body">
                <p><%= question.body %></p>
                <hr>
            </div>
            <div class="card-footer">
                <a class="btn btn-success" href="/answer/<=question.id%>">Responder</a>
            </div>
        </div>
        <hr>
        <h2>Respostas</h2>

        <% answers.forEach(answer =>{%>
            <div class="card">
                <div class="card-body">
                    <p><%=answer.body %></p>
                </div>
                <div class="card-footer">
                    <p>Respondido por: <%= answer.user.name %></p>
                </div>
            </div>
            <br>
            <%})%>
    </div>
</body>